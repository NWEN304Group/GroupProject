<!--show products of one categories-->
<% layout('layout') -%>


<div class="container">

    <div class="row">

        <% for (var i = 0; i < productsFound.length; i++) { %>
        <div class="col-md-4">
            <a href="/product/<%= productsFound[i]._id %>">
                <div class="thumbnail">
                    <img src="<%= productsFound[i].image %>">
                    <div class="caption">
                        <h3><%= productsFound[i].name %></h3>
                        <p><%= productsFound[i].category.name %></p>
                        <p>$<%= productsFound[i].price %></p>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
    </div>
</div>
