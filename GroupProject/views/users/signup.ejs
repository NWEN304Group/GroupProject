<% layout('layout') -%>

<div class="row">
  <div class="col-lg-6 col-md-offset-3">

    <% if (errors.length > 0) { %>
      <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismmiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= errors %>
      </div>
    <% } %>

    
    <form method="post" data-toggle="validator" role="form">

      <h1> Signup </h1>

      <div class="form-group">
        <label="name">Name: </label>
        <input id="username" type="text" class="form-control" name="name" required>
      </div>
      <div class="form-group">
        <label="name">Email: </label>
        <input id="email" type="email" class="form-control" name="email" required>
      </div>
      <div class="form-group">
        <label="name">Password: </label>
        <input id="password" type="password" class="form-control" name="password" required>
      </div>
      <div class="form-group">
        <label="name">Confirm Password: </label>
        <input id="confirm_password" type="password" class="form-control" name="confirm_password" data-match="#password" data-match-error="Whoops, these don't match" required>
      </div>

      <button type="submit" class="btn btn-success">Submit</button>

    </form>
  </div>
</div>
